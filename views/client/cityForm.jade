form#CitySearchForm
  fieldset
    div.control-group
      label.control-label(for="street") #{t('CitySearchForm.streetPrompt')}
      div.controls
        input.input_street.input-large(name="street", type="text", ng-model="cityCriteria.street", placeholder="#{t('CitySearchForm.streetPlaceholder')}")
    div.control-group
      label.control-label(for="city") #{t('CitySearchForm.cityPrompt')}
      div.controls
        input.input_city.input-large(name="city", type="text", ng-model="cityCriteria.city", placeholder="#{t('CitySearchForm.cityPlaceholder')}")
    div.control-group
      label.control-label(for="state") #{t('CitySearchForm.statePrompt')}
      div.controls
        input.input_state.input-large(name="state", type="text", ng-model="cityCriteria.state" placeholder="#{t('CitySearchForm.statePlaceholder')}")
    div.control-group
      label.control-label(for="submit")
      div.controls
        buttom.btn_submit.btn.btn-primary(name="submit", ng-click='getWeatherForCity()') #{t('CitySearchForm.btnSubmit')}
        buttom.btn_reset.btn.btn-warning(name="reset", ng-click='resetCityCriteria()') #{t('CitySearchForm.btnReset')}
